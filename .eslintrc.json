{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "eslint-config-prettier", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "react/react-in-jsx-scope": "off",
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    },
    "globals": { "process": "readonly" }
}
